<UserControl x:Class="MusicApp.Control.SongPlayListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicApp.Control"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <!--歌曲播放列表,主窗体右下方-->
    <UserControl.Resources>
        <!--音量按钮-->
        <Style x:Key="PlayListButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Cursor="Hand">
                            <TextBlock Text="{TemplateBinding Content}" FontFamily="{DynamicResource Iconfont}" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Popup x:Name="PlayListPopupContrainer" 
               IsOpen="False"
               StaysOpen="False" 
               Placement="Top" 
               Width="200" 
               Height="170" 
               HorizontalOffset="-10" 
               VerticalOffset="30"
               AllowsTransparency="True"
               PlacementTarget="{Binding ElementName=PlayListBut}">
            <ListBox x:Name="PlayListBox" Width="200" 
               Height="170" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding songName}" Margin="10" Foreground="#333333" FontSize="15"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Popup>
        <Button x:Name="PlayListBut" Content="&#xe67b;" Style="{DynamicResource PlayListButtonStyle}" Width="30" Height="30"/>
    </Grid>
</UserControl>
