<UserControl x:Class="MusicApp.Control.BottomPlayerWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicApp.Control"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="1023">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="#f1f2f6"/>
        <Border Background="White" Grid.Row="1">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                <Border Width="50" Height="50" BorderBrush="#f1f2f6" BorderThickness="2" CornerRadius="3" Margin="10 0 0 0">
                    <Border.Background>
                        <ImageBrush ImageSource="/Assets/Images/head_portrait.png" />
                    </Border.Background>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
    
</UserControl>
