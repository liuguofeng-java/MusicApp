<Application x:Class="MusicApp.App"
             
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MusicApp"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Common.xaml"/>
                <ResourceDictionary Source="/Themes/ScrollViewDictionary.xaml"/>
                <!--主题颜色-->
                <ResourceDictionary Source="/Themes/Color/DefaultColor.xaml"/>
                <ResourceDictionary Source="/Themes/Color/BlackColor.xaml"/>
                
                
                
            </ResourceDictionary.MergedDictionaries>
            
            
            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="微软雅黑" />
                <Setter Property="FontSize" Value="13" />
            </Style>
        
        </ResourceDictionary>

        

    </Application.Resources>
    
    
</Application>
