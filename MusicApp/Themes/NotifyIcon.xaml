<UserControl x:Class="MusicApp.Themes.NotifyIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicApp.Themes"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             mc:Ignorable="d" 
             x:Name="notifyIcon"
             d:DesignHeight="450" d:DesignWidth="800">
    <tb:TaskbarIcon 
        ToolTipText="鼠标移动上显示的文字"
        PopupActivation="DoubleClick"
        LeftClickCommand="{Binding ClickCommand}"
        LeftClickCommandParameter="{Binding ElementName=notifyIcon}"
        IconSource="/Assets/Images/Iocn/format.ico"/>
</UserControl>
